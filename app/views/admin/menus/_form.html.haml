= form_for [:admin, @menu], html: { class: "form form-horizontal menu" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :type, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :type, class: 'form-control', required: true
    = f.error_span(:type)
  .form-group
    = f.label :price, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :price, class: 'form-control', required: true
    = f.error_span(:price)
  .form-group
    = f.label :photo, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :photo, class: 'form-control', required: true
    = f.error_span(:photo)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), menus_path, :class => 'btn btn-default'
