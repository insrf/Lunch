- model_class = Menu
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @menu.name
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @menu.type
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @menu.price
%p
  %strong= model_class.human_attribute_name(:photo) + ':'
  %br
  = image_tag(@menu.photo.thumb.url, alt: 'Photo') if @menu.photo?


= link_to t('.back', :default => t("helpers.links.back")), admin_menus_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_menu_path(@menu), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_menu_path(@menu), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
