- model_class = Item
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @item.name
%p
  %strong= model_class.human_attribute_name(:course_type) + ':'
  %br
  = @item.course_type
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @item.price
%p
  %strong= model_class.human_attribute_name(:photo) + ':'
  %br
  = image_tag(@item.photo.thumb.url, alt: 'Photo') if @item.photo?


= link_to t('.back', :default => t("helpers.links.back")), admin_items_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_item_path(@item), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_item_path(@item), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
