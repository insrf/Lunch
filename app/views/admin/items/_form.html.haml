= form_for [:admin, @item], html: { class: "form form-horizontal item" } do |f|
  = render 'shared/errors', resource: @item
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :course_type, class: 'control-label col-lg-2'
    .col-lg-10
      = f.select :course_type, Item.course_types.keys, class: 'form-control', required: true
    = f.error_span(:course_type)
  .form-group
    = f.label :price, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :price, class: 'form-control', required: true
    = f.error_span(:price)
  .form-group
    = f.label :photo, class: 'control-label col-lg-2'
    .col-lg-10
      = f.file_field :photo
    = f.error_span(:photo)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_items_path, :class => 'btn btn-default'
