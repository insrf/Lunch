= form_for @order, html: { class: "form form-horizontal order" } do |f|
  .form-group
    = f.label :menu_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.collection_select :item_id, @menu.items, :id, :name, prompt: true, class: 'form-control', required: true
    = f.error_span(:menu_id)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), orders_path, :class => 'btn btn-default'
